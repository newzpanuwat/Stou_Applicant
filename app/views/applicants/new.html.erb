<h1>Applicants#FORM</h1>

<%= form_for @applicant do |f| %>
        <div class="field">
            <%= f.label :Applicant_ID %>
            <%= f.text_field :ap_code %><br />
        </div>

             <div class="field">
            <%= f.label :Applicant_name %>
            <%= f.text_field :ap_name %><br />
        </div>

     <div class="field">
            <%= f.label :Address %>
            <%= f.text_area :ap_addr, cols:60, rows:5 %><br />
        </div>

     <div class="field">
            <%= f.label :gender %>
            <%= f.text_field :ap_sex%><br />
        </div>

     <div class="field">
            <%= f.label :Highest_Education %>
            <%= f.text_field :ap_ed%><br />
        </div>

     <div class="field">
            <%= f.label :Major %>
            <%= f.text_field :ap_maj%><br />
        </div>

        <div class="action">
            <%= f.submit 'Submit' %>
        </div>
<% end %>