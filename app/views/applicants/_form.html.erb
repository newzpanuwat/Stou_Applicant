<%= form_for @applicant do |f| %>
        <div class="field">
            <%= f.label :Applicant_ID %>
            <%= f.text_field :ap_code %><br />
        </div>

             <div class="field">
            <%= f.label :Applicant_name %>
            <%= f.text_field :ap_name %><br />
        </div>

     <div class="field">
            <%= f.label :Address %>
            <%= f.text_area :ap_addr, cols:60, rows:5 %><br />
        </div>

    <div class="field">
            <%= f.label :Province %>
            <%= f.text_field :ap_province %><br />
    </div>

     <div class="field">
            <%= f.label :gender %>
           <%= f.label :Male %> <%= f.radio_button(:ap_sex, "Male") %>
            <%= f.label :Female %><%= f.radio_button(:ap_sex, "Female") %>
        </div>

     <div class="field">
            <%= f.label :Highest_Education %>
            <%= f.text_field :ap_ed %><br />
        </div>

     <div class="field">
            <%= f.label :Skills %>
            <%= f.text_field :ap_maj %><br />
        </div>

        <div class="field">
            <%= f.label :Position_Name %>
            <%= f.text_field :ap_maj %><br />
        </div>




        <div class="action">
            <%= f.submit 'Submit' %>
        </div>
<% end %>


<%= link_to 'Back', applicants_path %>